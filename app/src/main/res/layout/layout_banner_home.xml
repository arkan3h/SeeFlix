<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop"/>

        <View
            android:background="@drawable/bg_black_gradient_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_title_banner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_desc_banner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Description"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_banner"/>

        <ImageView
            android:id="@+id/iv_info_banner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_info_white"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_share_banner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_share_white"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toEndOf="@id/iv_info_banner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_info_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_info_banner"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginEnd="104dp"
            app:layout_constraintTop_toBottomOf="@id/iv_info_banner"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_share_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_share_banner"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/iv_share_banner"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>